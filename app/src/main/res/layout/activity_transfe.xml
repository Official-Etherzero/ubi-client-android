<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_bg"
    android:orientation="vertical"
    tools:context=".modules.user.transfer.TransfeActivity">

    <include layout="@layout/title_project" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/mnemonic_backup_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:src="@mipmap/zz_ubi_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="UBI"
            android:textColor="@color/zt_fff"
            android:textSize="@dimen/zt_17sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="7dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/convertible_assets"
            android:textColor="@color/zt_fff"
            android:textSize="@dimen/zt_15sp" />

        <TextView
            android:id="@+id/transfe_assets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textColor="#FEB43C"
            android:textSize="@dimen/zt_17sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/mnemonic_backup_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/count"
            android:textColor="@color/zt_lab"
            android:textSize="@dimen/zt_17sp" />

        <EditText
            android:id="@+id/transfe_count"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/new_bg1"
            android:hint="@string/input_count_hint"
            android:inputType="number"
            android:paddingStart="12dp"
            android:textColor="@color/zt_fff"
            android:textColorHint="@color/zt_et_hint"
            android:textSize="@dimen/zt_17sp" />

        <TextView
            android:id="@+id/transfe_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="@string/Search.all"
            android:textColor="@color/zt_lu"
            android:textSize="@dimen/zt_17sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="12dp"
        android:background="@drawable/mnemonic_backup_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/transfe_acc"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/new_bg1"
            android:hint="@string/transfer_to_account"
            android:inputType="phone"
            android:paddingStart="12dp"
            android:textColor="@color/zt_fff"
            android:textColorHint="@color/zt_et_hint"
            android:textSize="@dimen/zt_17sp" />

        <ImageView
            android:id="@+id/transfe_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@mipmap/send_scan_icon" />

    </LinearLayout>


    <EditText
        android:id="@+id/transfe_pwd"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/mnemonic_backup_bg"
        android:hint="@string/send_input_zhifu_pwd"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:textColor="@color/zt_fff"
        android:textColorHint="@color/zt_et_hint"
        android:textSize="@dimen/zt_17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="15dp"
        android:text="@string/tansfe_hint"
        android:textColor="@color/zt_lab1"
        android:textSize="@dimen/zt_12sp" />

    <TextView
        android:id="@+id/transfe_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/create_wallet_btn_bg_selector"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/confirm_transfer"
        android:textColor="@color/white"
        android:textSize="@dimen/zt_16sp" />

</LinearLayout>