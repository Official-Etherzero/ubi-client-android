<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/new_bg"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="22dp"
            android:paddingStart="22dp"
            android:paddingTop="30dp">

            <ImageView
                android:id="@+id/home_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/set"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="UBI Robot"
                android:textColor="@color/zt_fff"
                android:textSize="@dimen/zt_20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/btn_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/property_scan"
                android:gravity="center"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <com.ubiRobot.view.VerticalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!--<android.support.v4.view.ViewPager-->
                <!--android:id="@+id/card_vp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="175dp"-->
                <!--android:layout_marginBottom="10dp"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:clipChildren="true"-->
                <!--android:overScrollMode="never" />-->
                <include layout="@layout/fragment_wallet_card" />

                <TextView
                    android:id="@+id/property_banner_btn"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="25dp"
                    android:background="@mipmap/banner"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/btn_miner"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginStart="22dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/my_robot"
                        android:textColor="@color/zt_fff"
                        android:textSize="@dimen/zt_18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/into" />
                </LinearLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginStart="22dp"
                    android:background="@drawable/robot_dialog_bg"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp">

                        <LinearLayout
                            android:id="@+id/property_myrobot"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.4"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/my_power" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/my_power"
                                    android:textColor="@color/zt_lab"
                                    android:textSize="@dimen/zt_10sp" />

                                <TextView
                                    android:id="@+id/property_my_power"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:text="--"
                                    android:textColor="@color/zt_fff"
                                    android:textSize="@dimen/zt_13sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/property_team"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/team_power" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/team_power"
                                    android:textColor="@color/zt_lab"
                                    android:textSize="@dimen/zt_10sp" />

                                <TextView
                                    android:id="@+id/property_team_power"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp"
                                    android:text="--"
                                    android:textColor="@color/zt_fff"
                                    android:textSize="@dimen/zt_13sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/cumulative_revenue_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="23dp"
                        android:src="@mipmap/cumulative_revenue"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/lab1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="21dp"
                        android:layout_marginStart="5dp"
                        android:text="@string/Cumulative_Revenue"
                        android:textColor="@color/zt_lab"
                        android:textSize="@dimen/zt_13sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/cumulative_revenue_icon" />

                    <TextView
                        android:id="@+id/property_cumulative_revenue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/zt_fff"
                        android:textSize="@dimen/zt_13sp"
                        app:layout_constraintBottom_toBottomOf="@+id/lab1"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <ImageView
                        android:id="@+id/last_revenue_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        app:layout_constraintBottom_toTopOf="@+id/cumulative_revenue_icon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@mipmap/last_revenue" />

                    <TextView
                        android:id="@+id/lab2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="9dp"
                        android:text="@string/Last_Revenue"
                        android:textColor="@color/zt_lab"
                        android:textSize="@dimen/zt_13sp"
                        app:layout_constraintBottom_toTopOf="@+id/lab1"
                        app:layout_constraintStart_toStartOf="@+id/lab1" />

                    <TextView
                        android:id="@+id/property_last_revenue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/zt_fff"
                        android:textSize="@dimen/zt_13sp"
                        app:layout_constraintBottom_toBottomOf="@+id/lab2"
                        app:layout_constraintEnd_toEndOf="parent" />

                </android.support.constraint.ConstraintLayout>

            </LinearLayout>
        </com.ubiRobot.view.VerticalScrollView>
    </LinearLayout>


    <include layout="@layout/fragment_my" />

</android.support.v4.widget.DrawerLayout>