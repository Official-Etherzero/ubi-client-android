<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".modules.main.market.orderRecord.receiptQR.ReceiptQRActivity">

    <include layout="@layout/title_project" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/receipt_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:padding="10dp"
            android:text="@string/payment_method_wechat"
            android:textColor="@color/zt_hui50"
            android:textSize="@dimen/zt_15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/receipt_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/payment_method_alipay"
            android:textColor="@color/zt_alipay"
            android:textSize="@dimen/zt_15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/receipt_qr"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>