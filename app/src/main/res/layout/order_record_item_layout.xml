<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:paddingEnd="22dp"
    android:background="@color/new_bg"
    android:paddingStart="22dp">

    <LinearLayout
        android:id="@+id/order_ll"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_iso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="求购"
            android:textColor="@color/zt_fff"
            android:textSize="@dimen/zt_14sp" />

        <TextView
            android:id="@+id/order_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:textColor="@color/zt_lab"
            android:textSize="@dimen/zt_12sp" />

        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/zt_fff"
            android:textSize="@dimen/zt_13sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/order_price_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_ll"
        android:text="@string/unit_price"
        android:textColor="@color/zt_lab"
        android:textSize="@dimen/zt_13sp" />

    <TextView
        android:id="@+id/order_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_price_tab"
        android:layout_marginTop="5dp"
        android:textColor="@color/zt_fff"
        android:textSize="@dimen/zt_13sp" />

    <TextView
        android:id="@+id/order_count_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/order_price_tab"
        android:layout_marginStart="118dp"
        android:layout_toEndOf="@+id/order_price_tab"
        android:text="@string/count"
        android:textColor="@color/zt_lab"
        android:textSize="@dimen/zt_13sp" />

    <TextView
        android:id="@+id/order_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/order_item_price"
        android:layout_alignStart="@+id/order_count_tab"
        android:textColor="@color/zt_fff"
        android:textSize="@dimen/zt_12sp" />


    <TextView
        android:id="@+id/order_total_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/order_price_tab"
        android:layout_alignParentEnd="true"
        android:text="@string/order_total"
        android:textColor="@color/zt_lab"
        android:textSize="@dimen/zt_13sp" />

    <TextView
        android:id="@+id/order_item_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/order_item_price"
        android:layout_alignParentEnd="true"
        android:textColor="@color/zt_fff"
        android:textSize="@dimen/zt_12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:layout_alignParentBottom="true"
        android:background="@color/line" />

</RelativeLayout>
