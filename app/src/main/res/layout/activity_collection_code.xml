<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_bg"
    android:orientation="vertical"
    tools:context=".modules.user.collectionCode.CollectionCodeActivity">

    <include layout="@layout/title_project" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/mnemonic_backup_bg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/alipay_code"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:src="@mipmap/alipay_code" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/uplode_hint"
            android:textColor="@color/zt_lu"
            android:textSize="@dimen/zt_15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/mnemonic_backup_bg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/wechat_code"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:src="@mipmap/wechat_code" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/uplode_hint"
            android:textColor="@color/zt_lu"
            android:textSize="@dimen/zt_15sp" />
    </LinearLayout>


</LinearLayout>