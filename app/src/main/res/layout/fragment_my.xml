<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/new_bg1"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/web_rl_title"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/iv01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ubi" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/iv01"
                android:orientation="vertical">

                <com.ubiRobot.view.MText
                    android:id="@+id/seting_acc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:textColor="@color/zt_fff"
                    android:textSize="@dimen/zt_15sp"
                    app:customTFont="CircularPro-Bold.otf" />

                <com.ubiRobot.view.MText
                    android:id="@+id/seting_uid"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/zt_lab1"
                    android:textSize="@dimen/zt_12sp"
                    app:customTFont="CircularPro-Bold.otf" />
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_smrz"
            android:layout_width="match_parent"
            android:layout_height="57dp">

            <com.ubiRobot.view.MText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:drawableLeft="@mipmap/my_people"
                android:drawablePadding="10dp"
                android:text="@string/my_smrz"
                android:textColor="@color/zt_fff"
                android:textSize="14sp"
                app:customTFont="CircularPro-Bold.otf" />

            <TextView
                android:id="@+id/my_verified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:text="@string/verified"
                android:textColor="@color/zt_lu"
                android:textSize="@dimen/zt_12sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/my_language"
            android:layout_width="match_parent"
            android:layout_height="57dp">

            <com.ubiRobot.view.MText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:drawableLeft="@mipmap/my_yysz"
                android:drawablePadding="10dp"
                android:text="@string/my_yysz"
                android:textColor="@color/zt_fff"
                android:textSize="14sp"
                app:customTFont="CircularPro-Bold.otf" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_yqhy"
            android:layout_width="match_parent"
            android:layout_height="57dp">

            <com.ubiRobot.view.MText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:drawableLeft="@mipmap/my_friend"
                android:drawablePadding="10dp"
                android:text="@string/my_yqhy"
                android:textColor="@color/zt_fff"
                android:textSize="14sp"
                app:customTFont="CircularPro-Bold.otf" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_skm"
            android:layout_width="match_parent"
            android:layout_height="57dp">

            <com.ubiRobot.view.MText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:drawableLeft="@mipmap/my_code"
                android:drawablePadding="10dp"
                android:text="@string/my_skm"
                android:textColor="@color/zt_fff"
                android:textSize="14sp"
                app:customTFont="CircularPro-Bold.otf" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_help"
            android:layout_width="match_parent"
            android:layout_height="57dp">

            <com.ubiRobot.view.MText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:drawableLeft="@mipmap/my_bzzx"
                android:drawablePadding="10dp"
                android:text="@string/my_help"
                android:textColor="@color/zt_fff"
                android:textSize="14sp"
                app:customTFont="CircularPro-Bold.otf" />

        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="20dp"
        android:text="@string/my_exit"
        android:textColor="@color/zt_lu"
        android:textSize="@dimen/zt_14sp"
        android:textStyle="bold" />
</RelativeLayout>
