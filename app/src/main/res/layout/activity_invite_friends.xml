<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/yqhy_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".modules.user.InviteFriendsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wallet_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="32dp"
            android:src="@mipmap/back_white" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:src="@mipmap/yqhy_text" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/yqhy_robot" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/my_yaoqing_code"
        android:textColor="@color/zt_fff"
        android:textSize="@dimen/zt_18sp" />


    <TextView
        android:id="@+id/my_yqm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFEA00"
        android:textSize="@dimen/zt_30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/copy_yqm"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/yqhy_btn" />


</LinearLayout>