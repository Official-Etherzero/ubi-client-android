<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_bg"
    android:orientation="vertical"
    tools:context=".modules.main.market.orderRecord.orderInfo.OrderInfoActivity">

    <include layout="@layout/title_project" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="22dp"
        android:paddingStart="22dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/oder_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/zt_fff"
                    android:textSize="@dimen/zt_18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="@string/TransactionDetails.statusHeader"
                    android:textColor="@color/zt_lab"
                    android:textSize="@dimen/zt_13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/order_skm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/order_skm"
                android:textColor="@color/zt_lu"
                android:textSize="@dimen/zt_16sp" />

            <TextView
                android:id="@+id/order_djs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/zt_red"
                android:textSize="@dimen/zt_16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:background="@color/line" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_number_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_number"
                android:textColor="@color/zt_lab"
                android:textSize="@dimen/zt_12sp" />

            <TextView
                android:id="@+id/order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="484848"
                android:textColor="@color/zt_fff"
                android:textSize="@dimen/zt_15sp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:id="@+id/order_payType"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/zt_13sp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <TextView
                android:id="@+id/trans_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/vline"
                android:text="14990.0"
                android:textColor="@color/zt_lu"
                android:textSize="@dimen/zt_15sp" />

            <TextView
                android:id="@+id/tran_price_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/trans_amount"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/tran_price"
                android:text="@string/unit_price"
                android:textColor="@color/zt_lab"
                android:textSize="@dimen/zt_12sp" />

            <TextView
                android:id="@+id/tran_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/trans_amount"
                android:layout_alignParentEnd="true"
                android:gravity="right"
                android:minWidth="70dp"
                android:text="4.4"
                android:textColor="@color/zt_fff"
                android:textSize="@dimen/zt_12sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/vline"
                android:layout_width="wrap_content"
                android:layout_height="0.1dp"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tran_amount_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vline"
                android:layout_marginTop="3dp"
                android:text="@string/transaction_amount"
                android:textColor="@color/zt_lab"
                android:textSize="@dimen/zt_12sp" />

            <TextView
                android:id="@+id/tran_count_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tran_amount_tab"
                android:layout_alignStart="@+id/tran_price_tab"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/tran_count"
                android:text="@string/count"
                android:textColor="@color/zt_lab"
                android:textSize="@dimen/zt_12sp" />

            <TextView
                android:id="@+id/tran_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tran_amount_tab"
                android:layout_alignParentEnd="true"
                android:gravity="right"
                android:minWidth="70dp"
                android:text="1500"
                android:textColor="@color/zt_fff"
                android:textSize="@dimen/zt_12sp"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/seller_phone_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seller_contact"
                android:textColor="@color/zt_lab"
                android:textSize="@dimen/zt_12sp" />

            <TextView
                android:id="@+id/seller_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/zt_fff"
                android:textSize="@dimen/zt_13sp" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:background="@color/line" />

        <LinearLayout
            android:id="@+id/pay_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm_payment"
                android:textColor="@color/zt_lab"
                android:textSize="@dimen/zt_13sp" />


            <RadioGroup
                android:id="@+id/pay_rdaiogroup"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time_lab"
                android:orientation="horizontal"
                android:weightSum="2">

                <RadioButton
                    android:id="@+id/rg_paid"
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_weight="1"
                    android:text="@string/money_received"
                    android:textColor="@color/box_text_checked"
                    android:textSize="@dimen/zt_12sp" />

                <RadioButton
                    android:id="@+id/rg_unpaid"
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="@string/no_money_received"
                    android:textColor="@color/box_text_checked"
                    android:textSize="@dimen/zt_12sp" />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/payment_method_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment_method"
                android:textColor="@color/zt_lab"
                android:textSize="@dimen/zt_13sp" />


            <RadioGroup
                android:id="@+id/payment_method_rg"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time_lab"
                android:orientation="horizontal"
                android:weightSum="2">

                <RadioButton
                    android:id="@+id/rg_alipay"
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_weight="1"
                    android:text="@string/payment_method_alipay"
                    android:textColor="@color/box_text_checked"
                    android:textSize="@dimen/zt_12sp" />

                <RadioButton
                    android:id="@+id/rg_wechat"
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="@string/payment_method_wechat"
                    android:textColor="@color/box_text_checked"
                    android:textSize="@dimen/zt_12sp" />

            </RadioGroup>
        </LinearLayout>

        <TextView
            android:id="@+id/have_paid"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_lu_huang"
            android:gravity="center"
            android:text="@string/have_paid"
            android:textColor="@color/zt_lu"
            android:textSize="@dimen/zt_16sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/cancel_order"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_lu_huang"
            android:gravity="center"
            android:text="@string/cancel_order"
            android:textColor="@color/zt_lu"
            android:textSize="@dimen/zt_16sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/confirm_success"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/bg_lu_huang"
            android:gravity="center"
            android:text="@string/confirm_completion_transaction"
            android:textColor="@color/zt_lu"
            android:textSize="@dimen/zt_16sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="@string/order_info_hint1"
                android:textColor="#90ffffff"
                android:textSize="@dimen/zt_12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/order_info_hint2"
                android:textColor="#90ffffff"
                android:textSize="@dimen/zt_12sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>